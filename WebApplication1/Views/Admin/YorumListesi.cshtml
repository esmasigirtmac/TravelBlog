@using WebApplication1.Models.Siniflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Comment List</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>User</th>
        <th>Mail</th>
        <th>Comment</th>
        <th>Blog</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach(var x in Model)
    {
<tr>
    <td>@x.ID</td>
    <td>@x.KullaniciAdi</td>
    <td>@x.Mail</td>
    <td>@x.Yorum</td>
    <td>@x.Blog.Baslik</td>
    <td><a href="/Admin/YorumSil/@x.ID" class="btn btn-danger">Delete</a></td>
    <td><a href="/Admin/YorumGetir/@x.ID" class="btn btn-warning">Update</a></td>
</tr>
    }
</table>