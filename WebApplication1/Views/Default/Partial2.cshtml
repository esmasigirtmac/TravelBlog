@using WebApplication1.Models.Siniflar
@model List<Blog>

@foreach (var x in Model)
{
    <div class="right">
        <div class="bot-left">
            <a href="/Blog/BlogDetay/@x.ID">  <img src="@x.BlogImage" alt="" /> </a>
</div>
        <div class="left-text">

            <h4>@x.Baslik</h4>
            <span class="doller">@x.Tarih.ToString("dd.MM.yyyy")</span>
            <p>@x.Aciklama.Substring(0, 80)</p>
            <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Read More >></span></a></p>
        </div>
    </div>

}
