@model WebApplication1.Models.Siniflar.Blog

@{
    ViewBag.Title = "BlogGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Update Page</h2> @*Beginforumun altında bulunan kodlar ne zaman çalışcak: bloggüncelle devrey girince çalışcak, Bloggüncelle nerde :Admin conrtolunda, Bloguncelle ne zaman calışcak :Sayfada post işlemi gerçeklesince calişcak*@


<br />
@using (Html.BeginForm("BlogGuncelle", "Admin", FormMethod.Post))
{
    
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control",@readonly="readonly" })
    <br />
    @Html.Label("Title")
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    <br />
    @Html.Label("Date")
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })

    <br />
    @Html.LabelFor(x => x.BlogImage)
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    <br />
    @Html.Label("Description")
    @Html.TextAreaFor(x => x.Aciklama,15,1, new { @class = "form-control" })
    <br />
    <button class="btn btn-success"> Update Blog</button>
}

