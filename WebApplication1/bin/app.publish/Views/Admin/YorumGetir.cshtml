@model WebApplication1.Models.Siniflar.Yorumlar
@{
    ViewBag.Title = "YorumGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Blog Update Page</h2> @*Beginforumun altında bulunan kodlar ne zaman çalışcak: bloggüncelle devrey girince çalışcak, Bloggüncelle nerde :Admin conrtolunda, Bloguncelle ne zaman calışcak :Sayfada post işlemi gerçeklesince calişcak*@


<br />
@using (Html.BeginForm("YorumGuncelle", "Admin", FormMethod.Post))
{

    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.Label("Title")
    @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
    <br />
    
    @Html.LabelFor(x => x.Mail)
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x=>x.Yorum)
    @Html.TextAreaFor(x => x.Yorum, 15, 1, new { @class = "form-control" })
    <br />
    <button class="btn btn-success"> Update Comment</button>
}

